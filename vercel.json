{
  "cleanUrls": true,
  "trailingSlash": false,

  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain; charset=utf-8" }
      ]
    }
  ],

  "routes": [
    { "handle": "filesystem" },

    { "src": "/sitemap.xml", "dest": "/sitemap.xml" },
    { "src": "/robots.txt",  "dest": "/robots.txt"  },

    { "src": "/assets/(.*)", "dest": "/assets/$1"  },
    { "src": "/(.*\\..*)",  "dest": "/$1"          },

    { "src": "/(.*)",       "dest": "/index.html"  }
  ]
}
