{
  "version": 2,
  "routes": [
    { "handle": "filesystem" },

    { "src": "/sitemap.xml", "headers": { "Content-Type": "application/xml; charset=utf-8" }, "dest": "/sitemap.xml" },
    { "src": "/robots.txt",  "headers": { "Content-Type": "text/plain; charset=utf-8" },     "dest": "/robots.txt"  },
    { "src": "/assets/(.*)", "dest": "/assets/$1"  },
    { "src": "/(.*\\..*)",   "dest": "/$1"         },

    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
